        <update version="2.0.4" files="reCaptcha.tpl,rlReCaptcha.class.php"><![CDATA[]]></update>
        <update version="2.0.5" files="reCaptcha.tpl"><![CDATA[]]></update>
        <update version="2.0.6" files="reCaptcha.tpl,rlReCaptcha.class.php"><![CDATA[]]></update>
        <update version="2.1.0" files="reCaptcha.tpl,tplFooter.tpl"><![CDATA[]]></update>
        <update version="2.2.0" files="rlReCaptcha.class.php"><![CDATA[]]></update>
        <update version="2.2.1" files=""><![CDATA[]]></update>
        <update version="2.3.0" files=".htaccess,reCaptcha.tpl,reCaptcha_init.tpl,rlReCaptcha.class.php"><![CDATA[]]></update>
        <update version="2.3.1" files="rlReCaptcha.class.php"><![CDATA[]]></update>
        <update version="2.3.2" files="rlReCaptcha.class.php"><![CDATA[]]></update>
        <update version="2.3.3" files="reCaptcha.tpl,rlReCaptcha.class.php,i18n/ru.json"><![CDATA[]]></update>
