        <update version="3.0.0" files="admin/view/settings.tpl,i18n/ru.json,reCaptcha.tpl,static/.htaccess,static/lib.js,reCaptcha_init.tpl,rlReCaptcha.class.php,vendor/"><![CDATA[]]></update>
    </updates>

    <uninstall version="2.3.2"><![CDATA[]]></uninstall>
</plugin>
