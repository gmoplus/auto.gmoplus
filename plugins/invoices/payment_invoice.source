<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{$lang.invoice_number}{$item_info.ID}</title>
</head>
<body>
    <table cellpadding="0" cellspacing="0" style="width: 100%;">
        <tr>
            <td width="50%" align="left">
                <img src="{logo}" style="border: 0" />
            </td>
            <td width="50%" align="right">
                {$lang.email_site_name}
            </td>
        </tr>
        <tr>
            <td style="line-height: 4px;">
            </td>
        </tr>
    </table>
    <table cellpadding="0" cellspacing="0" style="width: 100%;">
        <tr>
            <td width="48%" align="left"  valign="top">
                <div>{$lang.invoice_buyer_info}</div>
                <div style="width: 100%; line-height: 3px; border-top: 1px solid silver;"></div>{$invoice_buyer_info}
            </td>
            <td width="4%"></td>
            <td width="48%" align="right" valign="top">
                <div>{$lang.invoice_seller_info}</div>
                <div style="width: 100%; line-height: 3px; border-top: 1px solid silver;"></div>{$config.invoices_billing}
            </td>
        </tr>
    </table>
    <div style="width: 100%; line-height: 5px; border-top: 1px solid silver;"></div>
    <table cellpadding="0" cellspacing="0" style="width: 100%;">
        <tr>
            <td align="left">{$common_info}</td>
        </tr>
    </table>
    <table width="100%" style="">
        <tr style="background-color: #f1f1f1;">
            <td width="55%" style="height: 25px; border: 1px solid silver;" align="center">{$lang.item}</td>
            <td width="10%" style="height: 25px; border: 1px solid silver;" align="center">{$lang.invoice_quantity}</td>
            <td width="15%" style="height: 25px; border: 1px solid silver;" align="center">{$lang.status}</td>
            <td width="20%" style="height: 25px; border: 1px solid silver;" align="center">{$lang.price}</td>
        </tr>
        <tr>
            <td width="55%" style="height: 25px; border-bottom: 1px solid silver; border-left: 1px solid silver;">
                {$item_info.Item_name}
            </td>
            <td width="10%" style="height: 25px; border-bottom: 1px solid silver; border-left: 1px solid silver;" align="center">1</td>
            <td width="15%" style="height: 25px; border-bottom: 1px solid silver; border-left: 1px solid silver;" align="center">{$item_info.Status}</td>
            <td width="20%" style="height: 25px; border-bottom: 1px solid silver; border-left: 1px solid silver; border-right: 1px solid silver;" align="center">{$item_info.price}</td>
        </tr>
        <tr>
            <td colspan="3" align="right" style="height: 25px; border-bottom: 1px solid silver; border-left: 1px solid silver;">{$lang.invoice_subtotal}&nbsp;&nbsp;</td>
            <td width="20%" align="center" style="height: 25px; border-bottom: 1px solid silver; border-left: 1px solid silver; border-right: 1px solid silver;">{$item_info.subotal}</td>
        </tr>
        <tr>
            <td colspan="3" align="right" style="height: 25px; border-bottom: 1px solid silver; border-left: 1px solid silver;">{$lang.total}&nbsp;&nbsp;</td>
            <td width="20%" align="center" style="height: 25px; border-bottom: 1px solid silver; border-left: 1px solid silver; border-right: 1px solid silver;">{$item_info.Total}</td>
        </tr>
    </table>
</body>
</html>
