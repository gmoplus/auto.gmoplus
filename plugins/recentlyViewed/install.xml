        <update version="1.3.0" files="static/lib.js,static/xdLocalStorage.html,static/xdLocalStorage.min.js,static/xdLocalStoragePostMessageApi.min.js,rlRecentlyViewed.class.php,rv_add_listing.tpl,rv_block.tpl,rv_listings.tpl,rv_listings.inc.php,i18n/ru.json"><![CDATA[]]></update>
        <update version="1.3.1" files="rlRecentlyViewed.class.php"><![CDATA[]]></update>
        <update version="1.4.0" files="i18n/ru.json,rlRecentlyViewed.class.php,rv_add_listing.tpl,rv_block.tpl,static/lib.js"><![CDATA[]]></update>
