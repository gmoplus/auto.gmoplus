        <update version="1.1.7" files="rv_block.tpl,static/lib.js"><![CDATA[]]></update>
        <update version="1.2.0" files="static/.htaccess,static/lib.js,static/style.css,.htaccess,rlRecentlyViewed.class.php,rv_add_listing.tpl,rv_block.tpl,rv_del_icon.tpl,rv_listings.inc.php,rv_listings.tpl"><![CDATA[]]></update>
