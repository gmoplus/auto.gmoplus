    <hooks>
        <hook name="tplHeader"><![CDATA[]]></hook>
        <hook name="staticDataRegister"><![CDATA[]]></hook>
        <hook name="seoBase"><![CDATA[]]></hook>
        <hook name="specialBlock"><![CDATA[]]></hook>
        <hook name="ajaxRequest"><![CDATA[]]></hook>
        <hook name="tplFooter"><![CDATA[]]></hook>
        <hook name="cronSavedSearchNotify"><![CDATA[]]></hook>
        <hook name="rlMessagesAjaxAfterMessageSent"><![CDATA[]]></hook>
        <hook name="rlMessagesAjaxContactOwnerAfterSend"><![CDATA[]]></hook>
        <hook name="profileEditProfileDone"><![CDATA[]]></hook>
        <hook name="apExtPhrasesUpdate"><![CDATA[]]></hook>
    </hooks>

    <phrases>
        <phrase key="pwa_name" module="admin"><![CDATA[Name]]></phrase>
        <phrase key="pwa_description" module="admin"><![CDATA[Description]]></phrase>
        <phrase key="pwa_short_name" module="admin"><![CDATA[Short name]]></phrase>
        <phrase key="pwa_bg_color" module="admin"><![CDATA[Background color]]></phrase>
        <phrase key="pwa_icon" module="admin"><![CDATA[App icon]]></phrase>
        <phrase key="pwa_maskable_icons" module="admin" version="1.1.0"><![CDATA[Adaptive icons]]></phrase>
        <phrase key="pwa_maskable_icons_desc" module="admin" version="1.1.0"><![CDATA[You can learn more about it [here].]]></phrase>
        <phrase key="pwa_launch_screen" module="admin"><![CDATA[Launch screen (portrait)]]></phrase>
        <phrase key="pwa_missing_image" module="admin"><![CDATA[Please select an image]]></phrase>
        <phrase key="pwa_config_saved" module="admin"><![CDATA[The changes have been saved.]]></phrase>
        <phrase key="pwa_icon_desc" module="admin"><![CDATA[Upload a PNG image with a resolution of 512x512.]]></phrase>
        <phrase key="pwa_launch_desc" module="admin"><![CDATA[Upload a PNG image with a resolution of 2048x2732.]]></phrase>
        <phrase key="pwa_usage_stat" module="admin"><![CDATA[Usage stats]]></phrase>
        <phrase key="pwa_stat_ip" module="admin"><![CDATA[IP]]></phrase>
        <phrase key="pwa_stat_os" module="admin"><![CDATA[OS]]></phrase>
        <phrase key="pwa_stat_browser" module="admin"><![CDATA[Browser]]></phrase>
        <phrase key="pwa_image_png_notice" module="admin"><![CDATA[Please, make sure you're loading a PNG image.]]></phrase>
        <phrase key="pwa_image_size_notice" module="admin"><![CDATA[Image dimensions should be greater than %dx%d px.]]></phrase>
        <phrase key="pwa_new_listing_added" module="frontEnd"><![CDATA[A new listing added to the site.]]></phrase>
        <phrase key="pwa_new_listings_added" module="frontEnd"><![CDATA[{count} listings added to the site.]]></phrase>
        <phrase key="pwa_message_from" module="common"><![CDATA[Message from %s ]]></phrase>
        <phrase key="pwa_install_webapp_1" module="frontEnd" version="1.3.0"><![CDATA[Tap the Install icon, and]]></phrase>
        <phrase key="pwa_install_webapp_2" module="frontEnd"><![CDATA[select Add to Home Screen from list.]]></phrase>
        <phrase key="pwa_push_subscription" module="frontEnd" js="1" version="1.2.0"><![CDATA[Push notifications]]></phrase>
        <phrase key="pwa_push_alerts" module="frontEnd" js="1" version="1.2.0"><![CDATA[Notify me of new listings matching my alert criteria]]></phrase>
        <phrase key="pwa_push_messages" module="frontEnd" js="1" version="1.2.0"><![CDATA[Notify me of new messages from other users]]></phrase>
        <phrase key="pwa_push_blocked_notice" module="frontEnd" js="1" version="1.2.0"><![CDATA[Push notifications blocked by the browser.]]></phrase>
        <phrase key="pwa_offline" module="admin"><![CDATA[You are offline; please connect your device to the network and tap the button.]]></phrase>
        <phrase key="pwa_reload" module="admin"><![CDATA[Reload App]]></phrase>
        <phrase key="pwa_country" module="admin"><![CDATA[Country]]></phrase>
        <phrase key="pwa_state" module="admin"><![CDATA[State]]></phrase>
        <phrase key="pwa_city" module="admin"><![CDATA[City]]></phrase>
        <phrase key="pwa_php_wrong" module="admin" version="1.1.0"><![CDATA[A PHP configuration issue in your server has been found.<br>Please make sure the server uses PHP >= 7.2, and the GMP Library is installed.<br>Update the PHP configuration and reinstall the plugin.]]></phrase>
        <phrase key="pwa_popup_content" module="frontEnd" js="1" version="1.2.0"><![CDATA[If you want to get push notifications you will need to enable them from 'My Profile' settings]]></phrase>
        <phrase key="pwa_receive_notifications" module="frontEnd" js="1" version="1.2.0"><![CDATA[Receive notifications]]></phrase>
        <phrase key="pwa_installed" module="frontEnd" js="1" version="1.3.0"><![CDATA[Your browser does not support the PWA or you've already installed the PWA on your device.]]></phrase>
    </phrases>

