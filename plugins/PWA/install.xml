<?xml version="1.0" encoding="utf-8" ?>
<plugin name="PWA">
    <title>Progressive Web App</title>
    <description>Mobile web-based App that allows users to enjoy all the features of the script and get push notifications</description>
    <author>Curtis Jackson</author>
    <owner>Flynax Classifieds Software</owner>
    <version>1.3.0</version>
    <date>11.06.2019</date>
    <class>PWA</class>
    <controller>pwa</controller>
    <compatible>4.8.2</compatible>

    <notices>
        <notice><![CDATA[Please make sure the website is served over HTTPS and PHP >= 7.2 version and have installed GMP Library.]]></notice>
    </notices>

