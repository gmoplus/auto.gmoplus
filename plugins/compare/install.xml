        <hook version="3.1.0" name="tplFeaturedItemIcon"><![CDATA[]]></hook>
        <hook version="3.1.0" name="apPhpConfigBottom"><![CDATA[]]></hook>
        <hook version="3.1.1" name="tplHeader"><![CDATA[]]></hook>
        <hook version="3.1.2" name="tplHeaderUserNav"><![CDATA[]]></hook>
    </hooks>

    <configs key="compare" name="Compare Listings">
        <![CDATA[]]>
        <config version="3.0.0" key="compare_cache" name="Use browser local cache" type="bool"><![CDATA[1]]></config>
        <config version="3.0.0" key="compare_cache_period" name="Cache period" description="hours" type="text" validate="int"><![CDATA[6]]></config>
        <config version="3.1.0" key="compare_featured_ad_icon" name="Compare icon on ads in the featured box" type="bool"><![CDATA[1]]></config>
    </configs>

    <pages>
        <page key="compare_listings" name="Comparison Table" type="system" path="comparision-tables" controller="compare" menus="2" tpl="1"><![CDATA[]]></page>
    </pages>

    <blocks>
        <block key="compare_results" name="My Comparison Tables" side="left" type="smarty" tpl="1"><![CDATA[
            {include file=$smarty.const.RL_PLUGINS|cat:'compare'|cat:$smarty.const.RL_DS|cat:'block.tpl'}
        ]]></block>
    </blocks>

    <phrases>
        <phrase version="3.1.2" key="compare_add_to_compare" module="common"><![CDATA[Add for comparison]]></phrase>
        <phrase version="3.1.2" key="compare_comparison_table" module="common"><![CDATA[Comparison Table]]></phrase>
        <phrase version="3.1.2" key="compare_compare" module="common"><![CDATA[Compare]]></phrase>
        <phrase version="3.1.2" key="compare_remove_from_compare" module="common"><![CDATA[Remove from comparison]]></phrase>
        <phrase version="3.1.2" key="compare_listings_to_be_compare" module="common"><![CDATA[Listings to be compared]]></phrase>
        <phrase version="3.1.2" key="compare_no_listings_to_compare" module="frontEnd"><![CDATA[No listings added to the comparison table.]]></phrase>
        <phrase version="3.1.2" key="compare_save_results" module="frontEnd"><![CDATA[Save Table]]></phrase>
        <phrase version="3.1.2" key="compare_title" module="frontEnd"><![CDATA[Title]]></phrase>
        <phrase version="3.1.2" key="compare_save_as" module="frontEnd"><![CDATA[Save as]]></phrase>
        <phrase version="3.1.2" key="compare_public" module="frontEnd"><![CDATA[Public]]></phrase>
        <phrase version="3.1.2" key="compare_private" module="frontEnd"><![CDATA[Private]]></phrase>
        <phrase version="3.1.2" key="compare_remove_notice" module="frontEnd"><![CDATA[Are you sure you want to remove the listing from the comparison table?]]></phrase>
        <phrase version="3.1.2" key="compare_fullscreen" module="frontEnd"><![CDATA[Fullscreen]]></phrase>
        <phrase version="3.1.2" key="compare_default_view" module="frontEnd"><![CDATA[Default view]]></phrase>
        <phrase version="3.1.2" key="compare_save_table_login_notice" module="frontEnd"><![CDATA[You should have an account and be logged in to save the comparison table.]]></phrase>
        <phrase version="3.1.2" key="compare_save_completed_notice" module="frontEnd"><![CDATA[You've successfully saved the comparison results as <b>{name}</b>.]]></phrase>
        <phrase version="3.1.2" key="compare_table_not_found" module="frontEnd"><![CDATA[The requested comparison table hasn't been found.]]></phrase>
        <phrase version="3.1.2" key="compare_table_private_only" module="frontEnd"><![CDATA[You are not allowed to view private comparison tables.]]></phrase>
        <phrase version="3.1.2" key="compare_delete_table_notice" module="frontEnd"><![CDATA[Are you sure you want to remove the table?]]></phrase>
        <phrase version="3.1.2" key="compare_table_removed" module="frontEnd"><![CDATA[You have removed the table.]]></phrase>
        <phrase version="3.1.2" key="compare_name_error" module="frontEnd"><![CDATA[The value must be at least 3 and more characters long.]]></phrase>
        <phrase version="3.1.2" key="compare_listings_unavailable" module="frontEnd"><![CDATA[The ads in the table are no longer available; please, select other listings for comparison.]]></phrase>
        <phrase version="3.1.2" key="compare_no_listings_to_save" module="frontEnd"><![CDATA[You haven't saved any comparison tables.]]></phrase>
    </phrases>

