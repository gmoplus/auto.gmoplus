        <file>static/style.css</file>
        <file>static/page-style.css</file>
    </files>

    <install><![CDATA[]]></install>

    <hooks>
        <hook version="3.0.0" name="boot"><![CDATA[]]></hook>
        <hook version="3.0.0" name="tplFooter"><![CDATA[]]></hook>
        <hook version="3.0.0" name="staticDataRegister"><![CDATA[]]></hook>
        <hook version="3.0.0" name="listingNavIcons"><![CDATA[]]></hook>
        <hook version="3.0.0" name="ajaxRequest"><![CDATA[]]></hook>
        <hook version="3.0.0" name="listingsModifyGroupMyFavorite"><![CDATA[]]></hook>
        <hook version="3.0.0" name="listingDetailsNavIcons"><![CDATA[]]></hook>
        <hook version="3.0.0" name="ajaxRecentlyAddedLoadPre"><![CDATA[]]></hook>
