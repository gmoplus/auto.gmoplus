        <phrase version="4.1.0" key="comments_number" module="frontEnd" target="listing_details"><![CDATA[{number} comment(s)]]></phrase>
        <phrase version="4.1.0" key="comments_no_rating_set" module="system"><![CDATA[You should set rating]]></phrase>
        <phrase version="4.1.0" key="comments_use_module_in_type" module="admin" target="listing_types"><![CDATA[Use Comments plugin]]></phrase>
    </phrases>
    <emails>
        <email key="comment_email" subject="New comment has been added to your listing"><![CDATA[Dear {name},

Your listing has a new comment, please see the details below:
<b>Listing:</b> {listing_title}
<b>Author:</b> {author}
<b>Title:</b> {title}
<b>Message:</b>
{message}

______________________________
Thank you,
{site_name}
Administration Team]]></email>
    </emails>

    <blocks>
        <block key="comments_block" login="0" name="Latest Comments" side="left" type="php" tpl="0"><![CDATA[
            {* will be generated automatically *}
        ]]></block>
        <block version="4.0.0" key="comments_block_bottom" login="0" name="Comments" side="bottom" type="smarty" tpl="1"><![CDATA[
            {include file=$smarty.const.RL_PLUGINS|cat:'comment'|cat:$smarty.const.RL_DS|cat:'comment_add_block.tpl'}
        ]]></block>
    </blocks>

