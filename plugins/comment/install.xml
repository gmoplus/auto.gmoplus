        <phrase version="4.0.0" key="notice_comment_added" module="system"><![CDATA[Your comment has been successfully added]]></phrase>
        <phrase version="4.0.0" key="notice_comment_added_approval" module="system"><![CDATA[Your comment has been successfully added and is awaiting to be reviewed by the Administrator.]]></phrase>
        <phrase version="4.0.0" key="comment_own_listing_not_allowed" module="system"><![CDATA[You are unable to comment your own listings.]]></phrase>
