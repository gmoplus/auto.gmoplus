        <config key="comments_select_comments_random" name="Get comments type" values="Last,Random" type="select"><![CDATA[Last]]></config>
        <config key="comments_number_comments" name="Comments number in block" type="text" validate="int"><![CDATA[5]]></config>
        <config key="comments_rating_group" name="Rating" type="divider"><![CDATA[]]></config>
        <config key="comments_rating_module" name="Comments rating" type="bool"><![CDATA[1]]></config>
        <config key="comments_stars_number" name="Stars number" type="text" validate="int"><![CDATA[5]]></config>
