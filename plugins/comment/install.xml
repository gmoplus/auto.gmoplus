        <![CDATA[]]>
        <config key="comment_message_symbols_number" name="Maximum characters number of message text" type="text" validate="int"><![CDATA[500]]></config>
        <config key="comments_nav_target" name="Open comments page in new window" type="bool"><![CDATA[0]]></config>
        <config key="comments_comment_block" name="Comments on listing details" type="divider"><![CDATA[]]></config>
        <config version="4.0.0" key="comment_mode" name="Display mode" type="select" values="tab,box"><![CDATA[tab]]></config>
        <config key="comments_login_access" name="Prevent not logged in users to see the comments" type="bool"><![CDATA[0]]></config>
        <config key="comments_per_page" name="Comments per page" type="text" validate="int"><![CDATA[10]]></config>
        <config key="comment_show_time" name="Show hours and minutes for comments" type="bool" validate="int"><![CDATA[1]]></config>
        <config version="4.0.0" key="comments_posting_group" name="Posting comment" type="divider"><![CDATA[]]></config>
