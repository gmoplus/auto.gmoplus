        <phrase version="4.0.0" key="comment_rating" module="common"><![CDATA[Rating]]></phrase>
        <phrase version="4.0.0" key="comment_set" module="common"><![CDATA[Set {stars} stars]]></phrase>
        <phrase version="4.0.0" key="comment_author_rating" module="common"><![CDATA[Author rating]]></phrase>
        <phrase version="4.0.0" key="comment_login_to_post" module="common"><![CDATA[Please sign in or sign up to post comments]]></phrase>
